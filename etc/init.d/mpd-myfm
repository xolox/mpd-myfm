#! /bin/sh -e
### BEGIN INIT INFO
# Provides:          mpd-myfm
# Required-Start:    mpd
# Required-Stop:     mpd
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start the mpd-myfm mpd-client as a daemon.
# Description:       Make mpd (music player daemon) into your own
#                    personalised radio station.
### END INIT INFO

# Get lsb functions
. /lib/lsb/init-functions
. /etc/default/rcS

CONFIG=/etc/mpd-myfm.conf

PIDFILE=$(grep "^\s*pidfile" $CONFIG |awk -F\= '{gsub(/[[:space:]]+/,"",$2); print $2}')

if [ -n $PIDFILE ] ; then
	PIDDIR=$(dirname $PIDFILE)
	if [ ! -d $PIDDIR ] ; then
		# create the directory where the pid file will be with correct
		# permissions. otherwise mpd-myfm fails to start.
		USER=$(grep "^\s*effectiveuser" $CONFIG |awk -F\=\s* '{gsub(/[[:space:]]+/,"",$2); print $2}')
		GROUP=$(grep "^\s*effectivegroup" $CONFIG |awk -F\=\s* '{gsub(/[[:space:]]+/,"",$2); print $2}')
		if [ -z $USER ] ; then
			USER=0
		fi
		if [ -z $GROUP ] ; then
			GROUP=0
		fi
		mkdir -m 755 $PIDDIR
		chown $USER:$GROUP $PIDDIR
	fi
fi

case "$1" in
	start)
		if [ -f $PIDFILE ] ; then
			if kill -0 `cat $PIDFILE` > /dev/null 2>&1 ; then
				log_begin_msg "pidfile exists, mpd-myfm client probably already running. If you know it is not remove $PIDFILE"
				log_end_msg 1
				exit 1
			fi
			log_begin_msg "reusing stale pidfile at $PIDFILE"
		fi
		log_begin_msg "Starting mpd-myfm services..."
		start-stop-daemon --start --exec $(which mpd-myfm) -- -D
		log_end_msg $?
		;;
	stop)
		log_begin_msg "Stopping mpd-myfm services..."
		start-stop-daemon --stop --pidfile $PIDFILE --retry 4
		log_end_msg $?
		;;
	restart)
		$0 stop
		sleep 1
		$0 start
		;;
	reload|force-reload) 
		$0 stop
		sleep 1
		$0 start
		;;
	*)
		log_success_msg "Usage: $0 {start|stop|restart|reload|force-reload}"
		exit 1
esac

exit 0
